// schema.prisma
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("POSTGRES_PRISMA_URL=postgresql://USER:PASSWORD@HOST:PORT/DATABASE")
}

model User {
    id        String   @id @default(uuid())
    name      String?
    email     String   @unique
    password  String
    role      String?
    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}
